  </PropertyGroup>

  <ItemGroup>
    <None Remove="External\ffmpeg.exe" />
    <None Remove="External\yt-dlp.exe" />
    <None Remove="Resources\badapple.mp4" />
    <None Remove="Resources\lucky.mp4" />
    <None Remove="Resources\yuri2.mp4" />
